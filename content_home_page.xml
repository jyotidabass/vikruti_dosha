<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomePage"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_home_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/statlich"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:layout_marginTop="30sp"
        android:textAlignment="center"
        />


    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="@string/txt_intro"
        android:layout_margin="30sp"
        android:fontFamily="@font/quicksand"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:background="#000"
        android:layout_margin="40px"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_page_action_intro"
        android:textAlignment="center"
        android:textColor="#000"
        android:fontFamily="@font/quicksand"
        android:layout_margin="30sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_page_btn1"
        android:id="@+id/btn_home_open_calculator"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        />

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/home_page_btn2"-->
        <!--android:id="@+id/btn_home_feedback"-->
        <!--android:background="@color/design_default_color_primary"-->
        <!--android:textColor="#fff"-->
        <!--android:layout_margin="5dp"-->
        <!---->
        <!--/>-->


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_page_btn2"
            android:id="@+id/btn_home_ayurveda_wiki"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_page_btn3"
            android:id="@+id/btn_home_unit_table"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            />

        <Button
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_page_btn4"
            android:id="@+id/btn_home_developer"
            android:background="@color/design_default_color_primary"
            android:layout_margin="5dp"
            />



    </LinearLayout>
</ScrollView>